# 生产环境配置文件
# 请根据实际部署环境修改以下配置

# 数据库配置
POSTGRES_DB=lab_management_prod
POSTGRES_USER=lab_user_prod
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis配置
REDIS_PASSWORD=your_secure_redis_password_here

# JWT密钥 (请生成一个强密码)
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_change_this_in_production

# 前端API地址
REACT_APP_API_URL=https://yourdomain.com

# CORS允许的源
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://m.yourdomain.com

# 备份计划 (每天凌晨2点)
BACKUP_SCHEDULE=0 2 * * *

# 监控配置
GRAFANA_PASSWORD=your_secure_grafana_password_here

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@yourdomain.com

# 文件上传配置
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/app/uploads

# 日志级别
LOG_LEVEL=INFO

# 域名配置
DOMAIN=yourdomain.com
WWW_DOMAIN=www.yourdomain.com
MOBILE_DOMAIN=m.yourdomain.com

# SSL证书路径
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# 数据库连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis连接配置
REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=5

# 安全配置
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict
CSRF_PROTECTION=true

# 性能配置
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# 监控和健康检查
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001